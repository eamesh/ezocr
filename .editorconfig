# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space

[*.{bash,sh,zsh}]
indent_style = space
